.page_posts
    .tree-posts
        display block
        width 100%
    #search
       background transparent
       svg
           background-color transparent
           
.tree-posts
    display none

.post-item
    text-align left
    padding rem(5px) rem(20px)
    position relative
    .content
        cf();
        +below(cut)
            text-align center
            stack()
        a
            text-transform lowercase
            +above(cut)
                col(4.2/6)
            text-decoration none
            border none
        .date
            color main
        .post-title
            color #FFFFFF
            position relative
            padding 0
            font-size rem(16px)
            margin 0
            text-align center
            &.selected
                background main
            &:hover
                background-color rgba(199, 178, 136, 0.32)
            +above(cut)
                text-align left
                margin-left rem(-10px)
                display initial
                font-size rem(17px)
                text-decoration none